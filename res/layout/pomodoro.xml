<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.nullpointerengineering.android.pomodoro.widgets.TimerFace
            android:id="@+id/timer_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <TextView
        android:id="@+id/task_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:gravity="bottom"
                  android:layout_weight="5">
        <Button android:id="@+id/DoneBtn"
                android:background="@drawable/ic_menu_preferences"
                android:layout_height="80dp"
                android:layout_width="80dp"/>
        <Button android:id="@+id/NewTaskBtn"
                android:background="@drawable/ic_menu_add_task"
                android:layout_height="80dp"
                android:layout_width="80dp"/>
        <Button android:id="@+id/ChangeTaskBtn"
                android:background="@drawable/ic_menu_preferences"
                android:layout_height="80dp"
                android:layout_width="80dp"/>
        <Button android:id="@+id/ManageTasksBtn"
                android:background="@drawable/ic_menu_statistics"
                android:layout_height="80dp"
                android:layout_width="80dp"/>
    </LinearLayout>
</LinearLayout>