<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/red_background"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="95">
        <ListView android:id="@android:id/list"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/GoldenRod"
            android:textSize="24sp"
            android:text="@string/no_tasks"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="5">
    <Button android:id="@+id/PlayBtn"
        android:background="@drawable/ic_menu_preferences"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
    <Button android:id="@+id/AddTaskBtn"
        android:background="@drawable/ic_menu_add_task"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
    <Button android:id="@+id/PreferenceBtn"
        android:background="@drawable/ic_menu_preferences"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
    <Button android:id="@+id/StatisticsBtn"
        android:background="@drawable/ic_menu_statistics"
        android:layout_height="80dp"
        android:layout_width="80dp"/>
    </LinearLayout>

</LinearLayout>